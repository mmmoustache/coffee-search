{
  "name": "ai-search",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "types": "tsc --noEmit",
    "lint": "eslint",
    "products:import": "tsx src/scripts/import-products.ts",
    "products:sync": "tsx src/scripts/sync-products.ts",
    "icon:tokens": "node src/scripts/generate-icons.mjs",
    "icons": "npm run icon:tokens && svg-sprite --config svg.json --log=info \"src/icons/*.svg\"",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "prepare": "husky",
    "prettier": "prettier -w",
    "analyze": "next experimental-analyze",
    "lighthouse:local": "node src/scripts/lighthouse.local.mjs",
    "lighthouse:run": "node src/scripts/lighthouse.run.mjs",
    "ci:local": "npm run lint && npm run types && npm run test && npm run build"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint"
    ],
    "*.{json,md,css,scss}": [
      "prettier -w"
    ]
  },
  "dependencies": {
    "csv-parse": "^6.1.0",
    "next": "16.1.6",
    "pgvector": "^0.2.1",
    "react": "19.2.3",
    "react-dom": "19.2.3"
  },
  "devDependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@lhci/cli": "^0.15.1",
    "@tailwindcss/postcss": "^4",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@trivago/prettier-plugin-sort-imports": "^6.0.2",
    "@types/node": "^20",
    "@types/pg": "^8.16.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitest/coverage-v8": "^4.0.18",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.4",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "husky": "^9.1.7",
    "jsdom": "^28.1.0",
    "lint-staged": "^16.2.7",
    "openai": "^6.18.0",
    "pg": "^8.18.0",
    "react-hook-form": "^7.71.1",
    "svg-sprite": "^2.0.4",
    "tailwindcss": "^4",
    "tsx": "^4.21.0",
    "typescript": "^5",
    "vitest": "^4.0.18",
    "zod": "^4.3.6"
  }
}
